<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PostFlow - All Posts</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');
        body { 
            font-family: 'Inter', sans-serif; 
            background: linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #4facfe 75%, #00f2fe 100%);
            background-size: 400% 400%;
            animation: gradientShift 15s ease infinite;
        }
        @keyframes gradientShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        .post-card {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            backdrop-filter: blur(10px);
        }
        .post-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }
        .avatar-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .nav-glass {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
        }
        .card-glass {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
        }
        .action-btn {
            transition: all 0.2s ease;
        }
        .action-btn:hover {
            transform: scale(1.05);
        }
        .pulse-dot {
            animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
        .gradient-text {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
    </style>
</head>
<body class="min-h-screen">
    <!-- Header -->
    <nav class="nav-glass border-b border-white/20 sticky top-0 z-50 shadow-lg">
        <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                        <i class="fas fa-stream text-white text-lg"></i>
                    </div>
                    <a href="/" class="text-2xl font-bold gradient-text hover:opacity-80 transition-opacity">PostFlow</a>
                </div>
                <div class="flex items-center space-x-3">
                    <a href="/" class="w-10 h-10 flex items-center justify-center text-gray-600 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition-all">
                        <i class="fas fa-home text-lg"></i>
                    </a>
                    <a href="/posts/new" class="inline-flex items-center px-5 py-2.5 bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-500 text-white font-semibold rounded-xl hover:shadow-xl transform hover:scale-105 transition-all duration-200 text-sm shadow-lg">
                        <i class="fas fa-plus mr-2"></i>
                        <span class="hidden sm:inline">New Post</span>
                        <span class="sm:hidden">New</span>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="max-w-2xl mx-auto px-4 py-8 sm:py-12">
        <!-- Header Section -->
        <div class="mb-8 text-center">
            <div class="inline-flex items-center space-x-3 mb-4">
                <div class="w-3 h-3 bg-green-500 rounded-full pulse-dot"></div>
                <h2 class="text-4xl font-bold text-white drop-shadow-lg">Posts Feed</h2>
            </div>
            <div class="card-glass rounded-2xl px-6 py-3 inline-block shadow-lg border border-white/20">
                <p class="text-gray-700 font-semibold">
                    <i class="fas fa-layer-group text-indigo-600 mr-2"></i>
                    <span class="text-indigo-600 font-bold text-lg"><%= posts.length %></span>
                    <span class="text-gray-600"><%= posts.length === 1 ? 'post' : 'posts' %> in total</span>
                </p>
            </div>
        </div>

        <!-- Posts Feed -->
        <% if(posts.length === 0) { %>
            <div class="card-glass rounded-2xl border border-white/30 shadow-2xl p-12 text-center">
                <div class="w-24 h-24 bg-gradient-to-br from-indigo-400 to-purple-400 rounded-full flex items-center justify-center mx-auto mb-6 shadow-lg">
                    <i class="fas fa-inbox text-white text-4xl"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-800 mb-3">No posts yet</h3>
                <p class="text-gray-600 mb-8 max-w-md mx-auto">Be the first to share something amazing with the community!</p>
                <a href="/posts/new" class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-500 text-white font-bold rounded-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-200 shadow-lg">
                    <i class="fas fa-plus-circle mr-2 text-lg"></i>
                    Create First Post
                </a>
            </div>
        <% } else { %>
            <div class="space-y-6">
                <% for(post of posts){ %>
                    <!-- Post Card -->
                    <article class="post-card card-glass rounded-2xl border border-white/30 shadow-xl overflow-hidden">
                        <!-- Post Header -->
                        <div class="px-5 py-4 border-b border-gray-200/50 bg-gradient-to-r from-white/50 to-indigo-50/30">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-3">
                                    <div class="relative">
                                        <div class="w-12 h-12 avatar-gradient rounded-full flex items-center justify-center flex-shrink-0 shadow-lg ring-2 ring-white">
                                            <span class="text-white font-bold text-base"><%=post.username.charAt(0).toUpperCase()%></span>
                                        </div>
                                        <div class="absolute -bottom-1 -right-1 w-4 h-4 bg-green-500 rounded-full border-2 border-white"></div>
                                    </div>
                                    <div>
                                        <h3 class="text-base font-bold text-gray-900 flex items-center">
                                            @<%=post.username %>
                                            <span class="ml-2 text-xs bg-indigo-100 text-indigo-700 px-2 py-0.5 rounded-full font-semibold">Verified</span>
                                        </h3>
                                        <p class="text-xs text-gray-500 flex items-center mt-0.5">
                                            <i class="fas fa-globe-americas mr-1 text-indigo-500"></i>
                                            PostFlow Community
                                        </p>
                                    </div>
                                </div>
                                <div class="relative group">
                                    <button class="w-9 h-9 flex items-center justify-center text-gray-400 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-all">
                                        <i class="fas fa-ellipsis-h"></i>
                                    </button>
                                    <div class="absolute right-0 mt-2 w-52 bg-white rounded-xl shadow-2xl border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all z-10 overflow-hidden">
                                        <a href="/posts/<%= post.id%>/edit" class="block px-4 py-3 text-sm text-gray-700 hover:bg-gradient-to-r hover:from-yellow-50 hover:to-orange-50 transition-all">
                                            <i class="fas fa-edit mr-3 text-yellow-500"></i>Edit Post
                                        </a>
                                        <form method="post" action="/posts/<%= post.id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this post?');">
                                            <button type="submit" class="w-full text-left block px-4 py-3 text-sm text-red-600 hover:bg-gradient-to-r hover:from-red-50 hover:to-pink-50 transition-all">
                                                <i class="fas fa-trash mr-3"></i>Delete Post
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Post Image -->
                        <% if(post.image) { %>
                        <div class="w-full">
                            <img src="<%=post.image%>" alt="Post image" class="w-full h-auto object-cover max-h-96">
                        </div>
                        <% } %>
                        
                        <!-- Post Content -->
                        <div class="px-5 py-5 bg-white/80">
                            <p class="text-gray-900 text-base leading-relaxed whitespace-pre-wrap break-words font-medium"><%=post.content%></p>
                        </div>
                        
                        <!-- Post Actions -->
                        <div class="px-5 py-4 bg-gradient-to-r from-gray-50/80 to-indigo-50/30 border-t border-gray-200/50">
                            <div class="flex items-center justify-between mb-3">
                                <div class="flex items-center space-x-4">
                                    <a href="/posts/<%= post.id %>" class="action-btn flex items-center space-x-2 px-4 py-2 bg-gradient-to-r from-indigo-500 to-purple-500 text-white rounded-lg hover:from-indigo-600 hover:to-purple-600 shadow-md">
                                        <i class="fas fa-eye"></i>
                                        <span class="text-sm font-semibold">View</span>
                                    </a>
                                    <a href="/posts/<%= post.id%>/edit" class="action-btn flex items-center space-x-2 px-4 py-2 bg-gradient-to-r from-yellow-400 to-orange-400 text-white rounded-lg hover:from-yellow-500 hover:to-orange-500 shadow-md">
                                        <i class="fas fa-edit"></i>
                                        <span class="text-sm font-semibold">Edit</span>
                                    </a>
                                </div>
                                <form method="post" action="/posts/<%= post.id %>?_method=DELETE" class="inline-block" onsubmit="return confirm('Are you sure you want to delete this post?');">
                                    <button type="submit" class="action-btn flex items-center space-x-2 px-4 py-2 bg-gradient-to-r from-red-500 to-pink-500 text-white rounded-lg hover:from-red-600 hover:to-pink-600 shadow-md">
                                        <i class="fas fa-trash"></i>
                                        <span class="text-sm font-semibold">Delete</span>
                                    </button>
                                </form>
                            </div>
                            <div class="pt-3 border-t border-gray-200/50">
                                <a href="/posts/<%= post.id %>" class="inline-flex items-center text-sm text-indigo-600 hover:text-indigo-700 font-semibold group">
                                    <span>View full post</span>
                                    <i class="fas fa-arrow-right text-xs ml-2 group-hover:translate-x-1 transition-transform"></i>
                                </a>
                            </div>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } %>

        <!-- Create Post CTA (if posts exist) -->
        <% if(posts.length > 0) { %>
            <div class="mt-10 text-center">
                <a href="/posts/new" class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-500 text-white font-bold rounded-2xl hover:shadow-2xl transform hover:scale-105 transition-all duration-200 shadow-xl text-lg">
                    <i class="fas fa-plus-circle mr-3 text-xl"></i>
                    Create New Post
                </a>
            </div>
        <% } %>
    </div>

    <!-- Footer -->
    <footer class="mt-20 nav-glass border-t border-white/20 py-8">
        <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <div class="flex items-center justify-center space-x-2 mb-3">
                <div class="w-8 h-8 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-lg flex items-center justify-center">
                    <i class="fas fa-stream text-white text-sm"></i>
                </div>
                <span class="text-lg font-bold gradient-text">PostFlow</span>
            </div>
            <p class="text-gray-600 text-sm">
                &copy; 2024 PostFlow. Built with ❤️ using Express.js & Tailwind CSS
            </p>
        </div>
    </footer>
</body>
</html>
